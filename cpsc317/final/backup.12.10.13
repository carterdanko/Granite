<script> 

var role = "<?php session_start();      echo $_SESSION['pos']; ?>"

var id=""
for (i=0;i<10;i++){
	id+=Math.floor(Math.random()*10);
}


function createRequestObject() {
    var ro;
    var browser = navigator.appName;
    if(browser == "Microsoft Internet Explorer"){
        ro = new ActiveXObject("Microsoft.XMLHTTP");
    }else{
        ro = new XMLHttpRequest();
    }
    return ro;
}
 
var http = createRequestObject();
var url="http://granite.sru.edu/~cmd5414/cpsc317/final/game3.php?"
function send(data) {
	if(role=="Player1")
	{
	http.open('get', url+"id="+id+"&data="+data);
    http.onreadystatechange = doSomething;
	http.send('data');
	}
	if(role=="Player2")
	{
	http.open('get', url+"id="+id+"&data="+data);
    http.onreadystatechange = doSomething;
	http.send('data');
	}
	http.open('get', url+"id="+id+"&data="+data);
    http.onreadystatechange = doSomething;
	http.send('data');
}
 
function doSomething() {
	if(http.readyState == 4){
	document.getElementById("echo").innerHTML =http.responseText
	f.st.value=""
	//f.t.value=""
	f.s.focus()
    }
}

function showrole() {
alert(role);
}
</script>
