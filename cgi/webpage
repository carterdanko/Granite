 M=60
 secondsinYear=Y*D*H*M

 day=happytime.getDate()
 month=happytime.getMonth()
  months=11-month
	daysuntilDec30=60+31-day
	if (month==10) daysuntilDec30=60-day
	secondselapsed=2*secondsinYear-daysuntilDec30*24*60*60
 popN=315091138+parseInt(secondselapsed/17)
 firstthree=parseInt(popN/1000000)
 nextthree=parseInt((popN-firstthree*1000000)/1000)
 Pnow.firstChild.nodeValue=firstthree+","+nextthree+",000"

